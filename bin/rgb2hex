#!/usr/bin/env python
# vim: set ft=python
import os.path
import sys
from getopt import getopt

def rgb2hex(r, g, b, normalized):
    if normalized:
        r = int(255.0*float(r))
        g = int(255.0*float(g))
        b = int(255.0*float(b))
    else:
        r = int(r)
        g = int(g)
        b = int(b)
    return hex((1 << 24) + (r << 16) + (g << 8) + b)[3:]

def usage():
    print "usage:", os.path.basename(sys.argv[0]), "r g b"

opts, args = getopt(sys.argv[1:], "nh")
normalized = False
for opt in opts:
    if opt[0] in ["-n"]:
        normalized = True
    elif opt[0] in ["-h"]:
        usage()
        sys.exit(1)

if not args or len(args) > 3:
    usage()
    sys.exit(1)

print "(" + args[0] + ", " + args[1] + ", " + args[2] + ") = #" + \
        rgb2hex(args[0], args[1], args[2], normalized)

