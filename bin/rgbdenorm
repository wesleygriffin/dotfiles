#!/usr/bin/env python
# vim: set ft=python
import os.path
import sys
from getopt import getopt

def usage():
    print "usage:", os.path.basename(sys.argv[0]), "r g b"

opts, args = getopt(sys.argv[1:], "h")
for opt in opts:
    if opt[0] in ["-h"]:
        usage()
        sys.exit(1)

if not args or len(args) > 3:
    usage()
    sys.exit(1)

r = float(args[0])
g = float(args[1])
b = float(args[2])
print "(%g, %g, %g) = (%d %d %d)" % (r, g, b, r*255.0, g*255.0, b*255.0)

